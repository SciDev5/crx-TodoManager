{
  "manifest_version": 3,

  "name": "Todo Manager",
  "description": "A tool for easily making note of your todo list.",
  "version": "0.9.1",

  "action": {
    "default_popup": "index.html",
    "default_title": "Open the todo manager popup."
  },
  "icons": {
    "512": "logo512.png",
    "192": "logo192.png",
    "128": "logo128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "storage"
  ]
}