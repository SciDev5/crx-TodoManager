{
  "manifest_version": 2,

  "name": "Todo Manager",
  "description": "A tool for easily making note of your todo list.",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the todo manager popup."
  },
  "icons": {
    "512": "logo512.png",
    "192": "logo192.png",
    "128": "logo128.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-TA31vT+jONOcZMWaxf386V5qmnz8BQvvqtmhcZeW1QQ='; object-src 'self'",
  "permissions": [
    "storage"
  ]
}